<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/ScrollView01"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.AddResaleActivity">

        <TextView
            android:id="@+id/companyname_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Tender Details"
            android:textStyle="bold"
            android:textSize="@dimen/appbar_padding"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/mill_name_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="Mill Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/price_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Price"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/quantity_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Quantity"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/quantityPrice_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Quantity Price"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/GST_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="GST"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/totalPrice_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Total Price"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/userName_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Name"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/userAddress_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Address"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/status_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Status"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Add" />
    </LinearLayout>
</ScrollView>